{
    "manifest_version": 2,
    "name": "Lightswitch",
    "homepage_url": "https://github.com/mdn/webextensions-examples/tree/master/dynamic-theme",
    "version": "1.0",
    "description": "Changes the theme based on time of day",
    "icons": {
        "48": "icons/lightswitch-48.png"
    },
    "permissions": [
        "alarms",
        "theme"
    ],
    "background": {
        "scripts": ["lightswitch.js"]
    },
    "applications": {
        "gecko": {
            "strict_min_version": "55.0a2"
        }
    }
}